 	@mkdir -p "${PREFIX}/bin"
-	@cp -f yank "${PREFIX}/bin"
-	@chmod 755 "${PREFIX}/bin/yank"
-	@echo "yank.1 -> ${MANPREFIX}/man1/yank.1"
+	@cp -f yank "${PREFIX}/bin/${NAME}"
+	@chmod 755 "${PREFIX}/bin/${NAME}"
+	@echo "yank.1 -> ${MANPREFIX}/man1/${NAME}.1"
 	@mkdir -p "${MANPREFIX}/man1"
-	@cp -f yank.1 "${MANPREFIX}/man1/yank.1"
-	@chmod 644 "${MANPREFIX}/man1/yank.1"
+	@cp -f yank.1 "${MANPREFIX}/man1/${NAME}.1"
+	@chmod 644 "${MANPREFIX}/man1/${NAME}.1"
 
 .PHONY: clean install
 
