---
 Makefile | 15 ++++++++-------
 1 file changed, 8 insertions(+), 7 deletions(-)

--- a/Makefile
+++ b/Makefile
@@ -1,7 +1,7 @@
 VERSION=	0.7.0
 
 YANKCMD=	xsel
-
+NAME?=		yank-cli
 PREFIX=		/usr/local
 MANPREFIX=	${PREFIX}/share/man
 
@@ -12,17 +12,17 @@
 	${CC} ${CFLAGS} -o $@ $< ${LDFLAGS} ${CPPFLAGS}
 
 clean:
-	rm yank
+	rm -f yank
 
 install: yank
-	@echo "yank -> ${PREFIX}/bin/yank"
